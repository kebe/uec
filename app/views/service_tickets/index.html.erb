<p id="notice"><%= notice %></p>

<h1>Service Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Driver</th>
      <th>Service date</th>
      <th>Service time</th>
      <th>Pickup address</th>
      <th>Dropoff address</th>
      <th>Pickup time</th>
      <th>Dropoff time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_tickets.each do |service_ticket| %>
      <tr>
        <td><%= service_ticket.client %></td>
        <td><%= service_ticket.driver %></td>
        <td><%= service_ticket.service_date %></td>
        <td><%= service_ticket.service_time %></td>
        <td><%= service_ticket.pickup_address %></td>
        <td><%= service_ticket.dropoff_address %></td>
        <td><%= service_ticket.pickup_time %></td>
        <td><%= service_ticket.dropoff_time %></td>
        <td><%= link_to 'Show', service_ticket %></td>
        <td><%= link_to 'Edit', edit_service_ticket_path(service_ticket) %></td>
        <td><%= link_to 'Destroy', service_ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

